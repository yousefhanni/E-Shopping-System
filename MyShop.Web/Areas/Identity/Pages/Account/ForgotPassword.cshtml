@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="container-fluid">
    <div class="row">
        <!-- Left Side (Form) -->
        <div class="col-md-6">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p class="lead">Enter your email.</p>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-primary btn-lg">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Side (Illustration) -->
        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center">
            <img class="loginImg img-fluid" src="~/img/reset-password.jpg" alt="reset-password" style="max-width: 80%;" />
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container-fluid {
        margin-top: 50px;
    }

    h1.display-4 {
        font-weight: bold;
        color: #0056b3; 
    }

    p.lead {
        font-size: 1.2rem;
        color: #333;
    }

    form {
        padding: 20px;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        form .form-floating {
            margin-bottom: 20px;
        }

        form button {
            background: linear-gradient(90deg, rgba(0,123,255,1) 0%, rgba(0,200,255,1) 100%);
            border: none;
            font-size: 1.2rem;
        }

            form button:hover {
                background-color: #0056b3;
                transition: 0.3s ease;
            }

</style>
