@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container">
    <div class="confirmation-wrapper text-center">
        <!-- Using Font Awesome Icon Instead of Image -->
        <i class="fas fa-check-circle confirmation-icon"></i>

        <!-- Page Title and Success Message -->
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Your password has been successfully reset.</p>
        <p>To access your account, please click the button below to log in.</p>

        <!-- Call-to-action Button -->
        <a asp-page="./Login" class="btn btn-primary btn-lg">Log in to your account</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Add Font Awesome for Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-top: 80px;
    }

    /* Icon Styling Instead of Image */
    .confirmation-icon {
        font-size: 5rem; /* Large icon size */
        color: #28a745; /* Success Green */
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }

        .confirmation-icon:hover {
            transform: scale(1.1);
        }

    /* Heading Styling */
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0056b3;
        margin-bottom: 10px;
    }

    /* Text Styling */
    p.lead {
        font-size: 1.3rem;
        color: #28a745; /* Success Green */
    }

    p {
        font-size: 1.1rem;
        color: #6c757d;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 1.2rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
