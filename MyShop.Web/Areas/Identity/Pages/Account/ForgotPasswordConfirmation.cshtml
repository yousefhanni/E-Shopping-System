 @page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container">
    <div class="confirmation-wrapper text-center">
        <img src="~/img/email_confirmation.jpg" alt="Check Email" class="confirmation-img">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Please check your email to reset your password.</p>

        <!-- Button to go to Gmail -->
        <a href="https://mail.google.com" target="_blank" class="go-to-email-btn">Go to Gmail</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-top: 50px;
    }

    .confirmation-img {
        width: 120px;
        height: auto;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }

        .confirmation-img:hover {
            transform: scale(1.1);
        }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0056b3;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .go-to-email-btn {
        display: inline-block;
        background-color: #007bff;
        color: white;
        padding: 12px 25px;
        font-size: 1.1rem;
        text-align: center;
        border-radius: 8px;
        text-decoration: none;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

        .go-to-email-btn:hover {
            background-color: #0056b3;
        }

    .confirmation-img:hover {
        transform: scale(1.1);
    }


    .footer {
        margin-top: 50px;
        padding: 20px;
        background-color: #f8f9fa;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    footer a {
        color: #0056b3;
        text-decoration: none;
    }

        footer a:hover {
            text-decoration: underline;
        }

</style>
