@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left Side (Form) -->
        <div class="col-md-6">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p class="lead">Reset your password to access your account.</p>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input asp-for="Input.Code" type="hidden" />

                        <!-- Email Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Reset Button -->
                        <button type="submit" class="w-100 btn btn-primary btn-lg">Reset</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Side (Illustration) -->
        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center">
            <img class="reset-password-img" src="~/img/reset-password.jpg" alt="Reset Password" class="img-fluid" style="max-width: 80%;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container-fluid {
        margin-top: 50px;
    }

    h1.display-4 {
        font-weight: bold;
        color: #0056b3; /* Text color */
    }

    p.lead {
        font-size: 1.2rem;
        color: #333;
    }

    form {
        padding: 20px;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        form .form-floating {
            margin-bottom: 20px;
        }

        form button {
            background: linear-gradient(90deg, rgba(0,123,255,1) 0%, rgba(0,200,255,1) 100%);
            border: none;
            font-size: 1.2rem;
        }

            form button:hover {
                background-color: #0056b3;
                transition: 0.3s ease;
            }

    /* Right Side Image Styling */
    .reset-password-img {
        width: 500px;
        height: auto;
    }
</style>
