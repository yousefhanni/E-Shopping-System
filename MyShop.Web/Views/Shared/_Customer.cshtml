<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic meta tags and title -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Tech Store - Discover the Best Tech Products</title>

    <!-- Favicon icon for the browser tab -->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Bootstrap icons and core theme CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/customer/css/styles.css" rel="stylesheet" />

    <!-- jQuery and jQuery UI for dynamic functionalities like autocomplete -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <!-- Custom CSS for styling specific elements like navbar and buttons -->
    <style>
        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 120px; /* Increased logo size */
                width: auto;
                margin-right: 5px; /* Reduced right margin */
                border-radius: 10px; /* Rounded corners */
                background-color: #007bff; /* Matches top bar color */
                padding: 5px; /* Added internal spacing around the logo */
            }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            margin-right: 10px;
            color: white;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-link:hover, .navbar-nav .nav-link:focus, .navbar-nav .nav-link:active {
                background-color: white !important; /* White background on hover */
                color: #007bff !important; /* Text color change on hover */
                border-radius: 50px; /* Rounded link background */
            }

        .btn-outline-light:hover, .btn-outline-light:focus, .btn-outline-light:active {
            background-color: white !important; /* White background on hover */
            color: #007bff !important; /* Text color change on hover */
            border-radius: 50px; /* Rounded button */
        }

        .btn-outline-light {
            border: 2px solid #ff5722; /* Custom border color */
        }
    </style>
</head>
<body>
    <!-- Navigation bar with links and a logo -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand fw-bold" href="#">
                <img src="~/customer/images/tech-shop-logo-design-template_145155-2697.jpg" alt="Tech Store Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <!-- Links for product categories with icons -->
                        <a class="nav-link fw-bold text-white" href='@Url.Action("Index", "Home", new { area = "Customer", category = "Mobiles" })'>
                            <i class="bi bi-phone"></i> Mobiles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-white" href='@Url.Action("Index", "Home", new { area = "Customer", category = "Airpods" })'>
                            <i class="bi bi-earbuds"></i> Airpods
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-white" href='@Url.Action("Index", "Home", new { area = "Customer", category = "Headphones" })'>
                            <i class="bi bi-headphones"></i> Headphones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-white" href='@Url.Action("Index", "Home", new { area = "Customer", category = "Laptops" })'>
                            <i class="bi bi-laptop"></i> Laptops
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-white" href='@Url.Action("Index", "Home", new { area = "Customer" })'>
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                </ul>
                <!-- Shopping cart button with item count -->
                <form class="d-flex ms-3">
                    <button class="btn btn-outline-light rounded-pill" type="submit">
                        <i class="bi-cart-fill me-1"></i> Cart
                        <span class="badge bg-light text-primary ms-1 rounded-pill">0</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Header section with a dark background and central text -->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Discover the Best Tech Products</h1>
                <p class="lead fw-normal text-white-50 mb-0">Find top gadgets and electronics here</p>
            </div>
        </div>
    </header>

    <!-- Placeholder for rendering specific views -->
    @RenderBody();

    <!-- Footer section with copyright information -->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Tech Store 2023</p></div>
    </footer>

    <!-- Bootstrap core JavaScript and custom scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/customer/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
